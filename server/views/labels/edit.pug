extends ../layouts/application.pug

block header
  = t('views.labels.edit.edit')

block content
  +formFor()(action=route('updateLabel', { id: +`${label.id}`}) method='post')
    input(type='hidden' name='_method' value='patch')
    +input(label, 'name', t('views.labels.name'), errors)(type="text")
    +submit(label)(value=t('views.labels.edit.submit'))